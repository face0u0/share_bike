<h3 class="text-muted mt-3 mb-2 offset-md-3">Log in for tourists</h3>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control mb-3' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control mb-3' %>

      <%= f.hidden_field :type, value: "tourist"  %>

      <%= f.submit "Log in", class: "btn btn-primary mt-1" %>
    <% end %>

    <h6 class="mt-3"><%= link_to "新規登録はこちら", t_new_path, class: "text-muted" %></h6>
  </div>
</div>