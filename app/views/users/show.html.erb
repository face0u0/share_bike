<div class="row mt-4">

  <div class="col-md-6">
    <h5 class="text-muted">Profiele</h5>
    <div class="mb-2">
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= "名前：" + @user.nickname %></li>
        <li class="list-group-item">評価：</li>
      </ul>
    </div>
  </div>

  <div class="col-md-6">
    <h5 class="text-muted">すべての自転車</h5>
    <div class="mt-2">
      <ul class="list-group">
        <% Bike.where(user_id: @user.id).each do |bike| %>
          <li class="list-group-item">
            <%= link_to bike.name, b_show_path(bike.id), class: "text-muted" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

</div>
