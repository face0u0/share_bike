<div class="row mt-4">

  <div class="col-md-6 mt-3">
    <div class="p-3 bg-white rounded shadow-sm">
      <h6 class="border-bottom border-warning pb-2 mb-0 text-muted">Profiele</h6>
      <% Bike.where(user_id: @user.id)&.each do |res| %>
        <div class="media text-muted pt-3">
          <div class="media-body pb-3 mb-0 border-bottom border-gray">
            <div class="flex-row d-flex justify-content-between align-items-center flex-wrap ">
              <div class="p-2"><%= "名前：" + @user.name %></div>
            </div>
          </div>
        </div>
        <div class="media text-muted pt-3">
          <div class="media-body pb-3 mb-0 border-bottom border-gray">
            <div class="flex-row d-flex justify-content-between align-items-center flex-wrap ">
              <div class="p-2">評価：</div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-md-6 mt-3">
    <div class="p-3 bg-white rounded shadow-sm">
      <h6 class="border-bottom border-warning pb-2 mb-0 text-muted">すべての自転車</h6>
      <% Bike.where(user_id: @user.id)&.each do |res| %>
        <div class="media text-muted pt-3">
          <div class="media-body pb-3 mb-0 border-bottom border-gray">
            <div class="flex-row d-flex justify-content-between align-items-center flex-wrap ">
              <!--          <div class="p-2"><%#= res.name %></div>-->
              <%= link_to res.name, b_show_path(res.id), class: "text-muted" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>