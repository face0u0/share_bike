<h5 class="mt-3 text-muted col-md-8 offset-md-2">Profiele</h5>
<div class="col-md-8 offset-md-2 mb-4">
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= "名前：" + @user.nickname %></li>
    <li class="list-group-item">評価：</li>
  </ul>
</div>

<h5 class="text-muted col-md-8 offset-md-2">すべての自転車</h5>
<div class="col-md-8 offset-md-2">
  <ul class="list-group">
    <% Bike.where(user_id: @user.id).each do |bike| %>
      <li class="list-group-item">
        <%= link_to bike.name ,b_show_path(bike.id), class: "text-muted"%>
      </li>
    <% end %>
  </ul>
</div>