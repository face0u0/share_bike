<h3 class="text-muted mt-3 mb-3 offset-md-3">Update your profile</h3>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_for(@user, url: u_update_path) do |f| %>
      <%= render 'layouts/error' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control mb-2', disabled: true%>

      <%= f.label "ハンドルネーム" %>
      <%= f.text_field :nickname, class: 'form-control mb-2' %>

      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control mb-2', disabled: true%>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control mb-2' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control mb-2' %>

      <%= f.submit "Save changes", class: "btn btn-navy" %>
    <% end %>
  </div>
</div>