<h3 class="text-muted mt-3 mb-3 offset-md-3">Register new bike</h3>
<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_for(@bike, url: b_create_path) do |f| %>
      <%= render 'layouts/bike_error' %>

      <%= f.label "表示名（お好きなものを）" %>
      <%= f.text_field :name, class: 'form-control mb-3' %>

      <%#= f.label "車体番号" %>
      <%#= f.number_field :vehicle_num, class: 'form-control mb-3' %>

      <%= f.label "防犯番号（防犯登録シールについている番号です！ハイフンはなしで）" %>
      <%= f.number_field :security_num, class: 'form-control mb-3'%>

      <%= f.label "自転車のロック番号（ダイヤルのみ、これがないと貸出できません！）" %>
      <%= f.number_field :pass, class: 'form-control mb-3'%>

      <%= f.label "その他説明事項" %>
      <%= f.text_area :details, class: 'form-control' %>

      <div class="custom-file mt-3 mb-2">
        <%= f.label "ファイルを追加", class: "custom-file-label", for: "customFile" %>
        <%= f.file_field :image, class: 'custom-file-input' %>
        <small class="text-muted form-text">縦長が画像の場合、上下が切れることがあります</small>
      </div>

      <%= f.submit "Register", class: "mt-2 btn btn-primary" %>
    <% end %>
  </div>
</div>

<script type="application/javascript">
    $('input[type="file"]').change(function (e) {
        const fileName = e.target.files[0].name;
        $('.custom-file-label').html(fileName);
    });
</script>