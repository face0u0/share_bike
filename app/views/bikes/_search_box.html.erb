<div class="pb-1 mb-2 q-form">
  <%= form_tag b_index_path, :method => 'get' do %>
    <div class="input-group">
      <%= text_field_tag :search, params[:search], class: "form-control col-5 col-md-4",
                         placeholder: "自転車検索",
                         "aria-describedby": "button-addon2"
      %>
      <%= select_tag 'dsearch', options_for_select(@date_hash, selected: @prev_day&.day),
                     class: 'custom-select col-5 col-md-3 col-lg-2', prompt: "日付を選択" %>
      <div class="input-group-append">
        <%= submit_tag "Search", :name => nil, class: "btn btn-secondary", id: "button-addon2" %>
      </div>
    </div>

  <% end %>
</div>