<div class="mb-2">
  <%= form_tag b_index_path, :method => 'get' do %>
    <div class="input-group mt-2">
      <%= text_field_tag :search, params[:search], class: "form-control col-lg-4 col-md-6",
                         placeholder: "自転車名で検索",
                         "aria-describedby": "button-addon2"
      %>
      <div class="input-group-append">
        <%= submit_tag "Search", :name => nil, class: "btn", id: "button-addon2"%>
      </div>
    </div>

  <% end %>
</div>

<div class="card-columns mt-1">
  <% @bikes.each do |bike| %>
    <a href="/bikes/show/<%= bike.id %>" class="text-muted">
      <div class="card">
        <%= image_tag bike.image.to_s, class: "card-img-top" %>
        <div class="card-body">
          <h5 class="card-title"><%= bike.name %></h5>
          <p class="card-text"><%= bike.details %></p>
          <p class="card-text">
            <small class="text-muted"><%= User.find(bike.user_id).nickname %></small>
          </p>
        </div>
      </div>
    </a>
  <% end %>
</div>
