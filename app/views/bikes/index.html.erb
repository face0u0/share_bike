<div class="pb-1 mb-1">
  <%= form_tag b_index_path, :method => 'get' do %>
    <div class="input-group mt-2">
      <%= text_field_tag :search, params[:search], class: "form-control col-5 col-md-4 border-secondary",
                         placeholder: "自転車検索",
                         "aria-describedby": "button-addon2"
      %>
      <%= select_tag 'dsearch', options_for_select(@date_hash, selected: @prev_day&.day),
                     class:'custom-select col-5 col-md-3 col-lg-2 btn-outline-secondary border-secondary', prompt: "日付を選択"%>
      <div class="input-group-append">
        <%= submit_tag "Search", :name => nil, class: "btn btn-outline-secondary", id: "button-addon2"%>
      </div>
    </div>

  <% end %>
</div>

<div class="card-columns mt-1 col-10 offset-1 col-sm-12 offset-sm-0">
  <% @bikes.each do |bike| %>
    <a href="/bikes/show/<%= bike.id %>" class="text-muted">
      <div class="card border border-0 shadow-sm">
        <%= image_tag bike.image.to_s, class: "card-img-top" %>
        <div class="card-body">
          <h6 class="card-title text-decoration-none"><%= bike.name %></h6>
          <p class="card-text text-decoration-none"><%= bike.details %></p>
          <p class="card-text text-decoration-none">
            <small class="text-muted"><%= User.find(bike.user_id).nickname %></small>
          </p>
        </div>
      </div>
    </a>
  <% end %>
</div>

<%= paginate @bikes %>

