<div class="row">
  <%= image_tag @bike.image.to_s, class: "img-thumbnail mx-auto d-block" %>

  <div class="col-md-8 offset-md-2 offset-xl-0">
    <ul class="list-group list-group-flush">
      <li class="list-group-item">名前：<%= @bike.name %></li>
      <li class="list-group-item">車体番号：<%= @bike.vehicle_num %></li>
      <li class="list-group-item">
        所有者：
        <%= link_to User.find(@bike.user_id).nickname, "/users/show/" + @bike.user_id.to_s %>
      </li>
    </ul>
  </div>
</div>

<h5 class="text-muted mt-3 mb-3 offset-md-2 col-md-8">提供日</h5>
<div class="col-md-8 offset-md-2 mt-2">
  <%= render 'util/reserve_list' %>
</div>


<%= paginate @reservations %>
