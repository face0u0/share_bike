<div id="blog">
<div id="content_title"></div>
<div id="content_main"></div>
</div>

<script>

    api.posts.read({slug: "<%= @post_id %>"})
        .then(content => {
            const head = document.getElementById("content_title");
            head.innerHTML = `
              <h1 style="padding-top: .5em; padding-bottom: 1em; border-bottom: 1px solid #ccc;">${content.title}</h1>
            `
            const holder = document.getElementById("content_main");
            holder.innerHTML = content.html;
        })
</script>

