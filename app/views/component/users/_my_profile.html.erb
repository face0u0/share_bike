<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_for(@user, url: u_update_path) do |f| %>
      <%= render 'layouts/error' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control mb-2', disabled: true%>

      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control mb-2', disabled: true%>

      <%= f.label :password %>（6文字以上）
      <%= f.password_field :password, class: 'form-control mb-2', value: nil %>

      <%#= f.label :password_confirmation, "Password Confirmation" %>
      <%#= f.password_field :password_confirmation, class: 'form-control mb-2', value: nil %>

      <%= f.submit "Save changes", class: "btn btn-navy" %>
    <% end %>
  </div>
</div>